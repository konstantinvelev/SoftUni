
@{
    ViewData["Title"] = "Add";
}

    <html>
    <head>
    </head>
    <body>
        <h1 class="text-center mt-2"><span class="badge badge-pill badge-dark">Add Exercise</span></h1>
        <hr class="hr-3">
        <form class="mx-auto w-50 bg-blur" action="/Exercises/Add" method="POST">
            <div class="form-group">
                <div class="text-white label-holder d-flex justify-content-center">
                    <label for="title" class="h4 mb-2">Title</label>
                </div>
                <input type="text" class="form-control" id="title" name="title">
            </div>
            <div class="form-group">
                <div class="text-white label-holder d-flex justify-content-center">
                    <label for="description" class="h4 mb-2">Content</label>
                </div>
                <input type="text" class="form-control" id="content" name="content">
            </div>
            <div class="form-group">
                <div class="text-white label-holder d-flex justify-content-center">
                    <label for="imageUrl" class="h4 mb-2">Video</label>
                </div>
                <input type="text" class="form-control" id="video" name="video">
            </div>
            <div class="form-group">
                <div class="text-white label-holder d-flex justify-content-center">
                    <label for="category" class="h4 mb-2">Category</label>
                </div>
                <select styleclass="browser-default custom-select" id="category" name="category">
                    <option value="Shirt">Shirt</option>
                    <option value="Denim">Denim</option>
                    <option value="Shorts">Shorts</option>
                    <option value="Jacket">Jacket</option>
                </select>
            </div>
            <div class="button-holder d-flex justify-content-center">
                <button type="submit" class="btn btn-secondary text-white mb-3">Add Product</button>
            </div>
        </form>
    </body>
    </html>
