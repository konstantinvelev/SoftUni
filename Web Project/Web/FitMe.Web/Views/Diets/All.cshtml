
@{
    ViewData["Title"] = "Diets";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">


<form asp-controller="Diets" asp-action="Create" method="get">
    <button type="submit" class="btn btn-primary">Add Diet</button>
</form>


@foreach (var item in Model.Diets)
{
    <div class="row blog-page">
        <div class="col-md-9">
            <div class="media-body">
                <h4 class="media-heading">@item.Title</h4>
                <ul class="list-inline list-unstyled text-right">
                    <li class="list-inline-item">
                        <i class="fas fa-user-edit"></i> @item.UserUserName
                    </li>
                    <li class="list-inline-item">
                        <i class="fas fa-calendar-alt"></i> @item.CreatedOn
                    </li>
                    <li class="list-inline-item">
                        <i class="fas fa-comment-dots"></i> @item.CommentsCount comments
                    </li>
                </ul>
            </div>
            <div class="blog margin-bottom-40">
                <div class="button-holder">
                    <a href="/Diets/Details?dietId=@item.Id" class="btn btn-info text-decoration-none">Info</a>
                </div>

            </div>
        </div>
    </div>
}
@model FitMe.Web.ViewModels.Diets.AllDietsViewModel
