
@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center mt-2"><span class="badge badge-pill badge-dark">Edit Diet</span></h1>
<hr class="hr-3" />
<form class="mx-auto w-50 bg-blur" action="/Diets/Edit" method="GET">
    <div class="form-group">
        <div class="text-dark label-holder d-flex justify-content-center">
            <label for="title" class="h4 mb-2">Title</label>
        </div>
    </div>
    <div>
        <h5> Old title: @Model.Title</h5>
        <h5>New title:</h5>
    </div>
    <input type="text" class="form-control" id="title" name="title" />
    <div class="form-group">
        <div class="text-dark label-holder d-flex justify-content-center">
            <label for="description" class="h4 mb-2">Description</label>
        </div>
        <div>
            <h5> Old description: @Model.Description</h5>
            <h5>New description:</h5>
        </div>
        <input type="text" class="form-control" id="description" name="description" />
    </div>
    <div class="form-group">
        <div class="text-dark label-holder d-flex justify-content-center">
            <label for="description" class="h4 mb-2">Gender</label>
        </div>
        <div>
            <h5> Old genre: @Model.Gender</h5>
            <h5>New genre:</h5>
        </div>
        <div class="text-dark label-holder d-flex justify-content-center">
            <select styleClass="browser-default custom-select" id="gender" name="gender">
                <option value="Male">Male</option>
                <option value="Female">Female</option>
            </select>
        </div>
    </div>
    <form asp-controller="Diets" asp-action="Update" method="post">
        <button type="submit" class="btn btn-primary">Save</button>
    </form>

</form>

