
@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center mt-2"><span class="badge badge-pill badge-dark">Add Diet</span></h1>
<hr class="hr-3" />
<form class="mx-auto w-50 bg-blur" action="/Diets/Create" method="POST">
    <div class="form-group">
        <div class="text-dark label-holder d-flex justify-content-center">
            <label for="name" class="h4 mb-2">Title</label>
        </div>
        <input type="text" class="form-control" id="Title" name="Title" />
    </div>
    <div class="form-group">
        <div class="text-dark label-holder d-flex justify-content-center">
            <label for="description" class="h4 mb-2">Description</label>
        </div>
        <input type="text" class="form-control" id="description" name="description" />
    </div>
    <div class="form-group">
        <div class="text-dark label-holder d-flex justify-content-center">
            <label for="description" class="h4 mb-2">Gender</label>
        </div>
        <div class="text-dark label-holder d-flex justify-content-center">
            <select styleClass="browser-default custom-select" id="gender" name="gender">
                <option value="Male">Male</option>
                <option value="Female">Female</option>
            </select>
        </div>
    </div>

    <div class="button-holder d-flex justify-content-center">
        <button type="submit" class="btn btn-secondary text-white mb-3">Add Diet</button>
    </div>
</form>

